{
  "name": "pelela",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preinstall": "node scripts/preinstall.js",
    "typecheck": "pnpm -r run typecheck",
    "build": "pnpm -r run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:packages": "pnpm -r run test",
    "test:vscode": "pnpm -C tools/pelela-vscode test",
    "test:all": "pnpm run test:packages && pnpm run test:vscode",
    "biome:lint": "biome lint .",
    "biome:lint:fix": "biome lint --write .",
    "biome:format": "biome format .",
    "biome:format:fix": "biome format --write .",
    "biome:check": "biome check .",
    "biome:check:fix": "biome check --write .",
    "install:vscode": "node scripts/install-pelela-vscode.cjs",
    "audit": "pnpm audit --audit-level moderate",
    "ci:local": "pnpm install && pnpm run lint && pnpm run typecheck && pnpm run build && pnpm run test:coverage",
    "ci:act": "act -j build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": "^10.0.0"
  },
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "version": "^10.0.0"
    }
  },
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@vitest/coverage-v8": "4.0.14",
    "jsdom": "27.2.0",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.14"
  }
}
