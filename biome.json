{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noConsole": "off",
        "noEmptyBlockStatements": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noNamespace": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noConstantCondition": "warn",
        "noSwitchDeclarations": "off",
        "noInnerDeclarations": "off",
        "useYield": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      },
      "nursery": {
        "noUnusedExpressions": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all",
      "bracketSpacing": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.js",
      "**/*.ts",
      "**/*.jsx",
      "**/*.tsx",
      "**/*.json",
      "**/*.jsonc",
      "!examples"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "assist": {
    "actions": {
      "source": { "organizeImports": "on" }
    }
  }
}
