{
  "scopeName": "text.html.pelela",
  "name": "Pelela Template",
  "patterns": [
    {
      "include": "#pelela-root"
    }
  ],
  "repository": {
    "pelela-root": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#pelela-tag"
        },
        {
          "include": "#html-tag"
        },
        {
          "include": "#entities"
        }
      ]
    },
    "comment": {
      "name": "comment.block.html",
      "begin": "<!--",
      "end": "-->",
      "captures": {
        "0": {
          "name": "punctuation.definition.comment.html"
        }
      }
    },
    "entities": {
      "patterns": [
        {
          "name": "constant.character.entity.html",
          "match": "&([a-zA-Z0-9]+|#[0-9]+|#x[0-9a-fA-F]+);"
        }
      ]
    },
    "pelela-tag": {
      "patterns": [
        {
          "name": "meta.tag.pelela",
          "begin": "(<)(pelela)\\b",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.pelela.custom"
            }
          },
          "end": "(/?>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          },
          "patterns": [
            {
              "include": "#tag-stuff"
            }
          ]
        },
        {
          "name": "meta.tag.pelela",
          "begin": "(<\\/)(pelela)\\b",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.pelela.custom"
            }
          },
          "end": "(>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          }
        }
      ]
    },
    "html-tag": {
      "patterns": [
        {
          "name": "meta.tag.any.html",
          "begin": "(<)([a-zA-Z][a-zA-Z0-9:-]*)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "end": "(/?>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          },
          "patterns": [
            {
              "include": "#tag-stuff"
            }
          ]
        },
        {
          "name": "meta.tag.any.html",
          "begin": "(<\\/)([a-zA-Z][a-zA-Z0-9:-]*)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "end": "(>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          }
        }
      ]
    },
    "tag-stuff": {
      "patterns": [
        {
          "include": "#pelela-attributes"
        },
        {
          "include": "#html-attributes"
        }
      ]
    },
    "pelela-attributes": {
      "patterns": [
        {
          "name": "meta.attribute.pelela.foreach",
          "begin": "\\b(for-each)\\s*(=)\\s*([\"'])",
          "beginCaptures": {
            "1": {
              "name": "entity.other.attribute-name.pelela.foreach"
            },
            "2": {
              "name": "punctuation.separator.key-value.html"
            },
            "3": {
              "name": "punctuation.definition.string.begin.html"
            }
          },
          "end": "([\"'])",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.string.end.html"
            }
          },
          "patterns": [
            {
              "match": "\\b(\\w+)\\s+(of)\\s+(\\w+)\\b",
              "captures": {
                "1": {
                  "name": "variable.other.loop.pelela"
                },
                "2": {
                  "name": "keyword.operator.pelela"
                },
                "3": {
                  "name": "variable.other.collection.pelela"
                }
              }
            }
          ]
        },
        {
          "name": "meta.attribute.pelela.viewmodel",
          "match": "\\b(view-model)\\s*(=)\\s*(\"([^\"]*)\"|'([^']*)')",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.pelela.viewmodel"
            },
            "2": {
              "name": "punctuation.separator.key-value.html"
            },
            "3": {
              "name": "meta.attribute-value.pelela"
            },
            "4": {
              "name": "support.type.pelela"
            },
            "5": {
              "name": "support.type.pelela"
            }
          }
        },
        {
          "name": "meta.attribute.pelela.binding",
          "match": "\\b(bind-[a-zA-Z0-9_-]+)\\s*(=)\\s*(\"([^\"]*)\"|'([^']*)')",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.pelela.binding"
            },
            "2": {
              "name": "punctuation.separator.key-value.html"
            },
            "3": {
              "name": "meta.attribute-value.pelela"
            },
            "4": {
              "name": "variable.language.pelela"
            },
            "5": {
              "name": "variable.language.pelela"
            }
          }
        },
        {
          "name": "meta.attribute.pelela.click",
          "match": "\\b(click)\\s*(=)\\s*(\"([^\"]*)\"|'([^']*)')",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.pelela.click"
            },
            "2": {
              "name": "punctuation.separator.key-value.html"
            },
            "3": {
              "name": "meta.attribute-value.pelela"
            },
            "4": {
              "name": "support.function.pelela"
            },
            "5": {
              "name": "support.function.pelela"
            }
          }
        },
        {
          "name": "meta.attribute.pelela.if",
          "match": "\\b(if)\\s*(=)\\s*(\"([^\"]*)\"|'([^']*)')",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.pelela.if"
            },
            "2": {
              "name": "punctuation.separator.key-value.html"
            },
            "3": {
              "name": "meta.attribute-value.pelela"
            },
            "4": {
              "name": "variable.language.pelela"
            },
            "5": {
              "name": "variable.language.pelela"
            }
          }
        }
      ]
    },
    "html-attributes": {
      "patterns": [
        {
          "name": "meta.attribute.html",
          "match": "\\b([a-zA-Z][a-zA-Z0-9:-]*)\\s*(=)\\s*(\"([^\"]*)\"|'([^']*)')",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.html"
            },
            "2": {
              "name": "punctuation.separator.key-value.html"
            },
            "3": {
              "name": "string.quoted.html"
            },
            "4": {
              "name": "string.quoted.double.html"
            },
            "5": {
              "name": "string.quoted.single.html"
            }
          }
        },
        {
          "name": "entity.other.attribute-name.html",
          "match": "\\b[a-zA-Z][a-zA-Z0-9:-]*"
        }
      ]
    }
  }
}

