<h1>Conversor Millas a Kilómetros</h1>

<pelela view-model="Conversor">
  <label>
    Millas:
    <input type="text" bind-value="millas" />
  </label>

  <button click="convertir">Convertir</button>

  <p if="hasResult">
    Kilómetros:
    <span 
      bind-value="kilometros" 
      bind-class="claseKilometros" />
  </p>
</pelela>